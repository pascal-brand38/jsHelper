{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "js",
    "rootDir": "ts",
    // "allowJs": true,
    "strict": true,
    "noImplicitAny": true,

    "incremental": false,
    "composite": false,

    // emit dist files
    // "allowImportingTsExtensions": false,
    // "emitDeclarationOnly": false,
    "noEmit": false,
    "declaration": true,

    "target": "ES2021",
    "moduleResolution": "node",
    // "types": "module"
    // "moduleResolution": "NodeNext",
    // "module": "NodeNext"
    "module": "ES2022",

    "skipLibCheck": true,
  },
  "include": ["./ts/**/*.mts"],
  "exclude": ["*.mjs" ]
}
